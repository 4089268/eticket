@using System.Diagnostics
@model IEnumerable<dynamic>

<div class="row mb-5">
    <div class="col-12 px-4">
        <h6>Reportes por estatus</h6>
    </div>
    @foreach(var statusResume in Model)
    {
        <div class="col-xxl-3 col-sm-6 col-ssm-12 mb-2">
            <div class="ap-po-details ap-po-details--2 p-25 radius-xl d-flex justify-content-between">
                <div class="overview-content w-100">
                    <div class=" ap-po-details-content d-flex flex-wrap justify-content-between">
                        <div class="ap-po-details__titlebar">
                            <p>@statusResume.Estatus</p>
                            <h1>@statusResume.Total.ToString("n0")</h1>
                        </div>
                        <div class="ap-po-details__icon-area">
                            <div class="svg-icon order-bg-opacity-secondary color-secondary">
                                @switch (statusResume.Estatus.ToLower())
                                {
                                    case "atendido":
                                        <i class="las la-check-circle"></i>
                                        break;
                                    case "en proceso":
                                        <i class="las la-book-reader"></i>
                                        break;
                                    default:
                                        <i class="las la-folder-open"></i>
                                        break;
                                }
                            </div>
                        </div>
                    </div>
                    <div class="ap-po-details-time">
                        <div>
                            <span class="color-success">
                                <i class="las la-arrow-up"></i>
                                <strong>0.0%</strong>
                            </span>
                            <small>Desde el mes pasado</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>