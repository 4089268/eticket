@model eticket.ViewModels.UsuarioRequest

<div class="fluid-container">
    <form id="nuevoUsuarioForm" onsubmit="submitNuevoUsuario(event)">
        <div class="row">
            <div id="form-error" class="col-12 alert alert-danger d-none">Esto es error</div>
            @Html.AntiForgeryToken()
        </div>

        <div class="row g-2">
            <div class="col-md-12">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control" required />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            
            <div class="col-md-12">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Contraseña" class="form-label"></label>
                <input type="password" asp-for="Contraseña" class="form-control" required />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="ConfirmarContraseña" class="form-label"></label>
                <input type="password" asp-for="ConfirmarContraseña" class="form-control" required />
                <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>

            </div>

            <div class="col-md-12">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <label asp-for="Apellido" class="form-label"></label>
                <input asp-for="Apellido" class="form-control" required />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            
            <div class="col-12 mt-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-lg btn-success px-4" id="submit-button">
                    <span class="upload-icon">
                        <i class="fa fa-save"></i>
                        <span>Guardar</span>
                    </span>
                    <span class="upload-spinner d-none">
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span>Registrando usuario</span>
                    </span>
                </button>
            </div>
        </div>
    </form>
</div>