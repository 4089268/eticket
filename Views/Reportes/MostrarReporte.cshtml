@using eticket.ViewModels
@model OprReporte
@{
    ViewData["Title"] = $"Reporte #{Model.Folio}";
}
@functions{
    IEnumerable<OprDetReporte> DetalleReporte()
    {
        if(!(Model.OprDetReportes??[]).Any())
        {
            return [];
        }

        return Model.OprDetReportes!.OrderByDescending(i=> i.Fecha);
    }
}

