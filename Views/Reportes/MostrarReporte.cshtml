@using System.Diagnostics
@using eticket.Data
@using eticket.ViewModels
@model MostrarReporteViewModel
@{
    ViewData["Title"] = $"Reporte #{Model.Reporte.Folio}";
    string? googleMapsKey = ViewBag.GoogleMapsSettings.Key.ToString();

    bool mostrarMapa = false;
    if(Model.Reporte?.GpsLat != 0 && Model.Reporte?.GpsLat != null && Model.Reporte?.GpsLon != 0 && Model.Reporte?.GpsLon != null )
    {
        mostrarMapa = true;
    }
}

@section breadcrumb
{
    <div class="col-12">
        <div class="breadcrumb-main">
            <div class="d-flex aling-items-center">
                <div>
                    <a href="@ViewBag.UrlBack"  class="text-decoration-none text-black h5">
                        <i class="las la-undo"></i>
                        <span>Regresar</span>
                    </a>
                </div>
                <span class="mx-3 vr mb-2 bolder"></span>
                <h4 class="text-capitalize breadcrumb-title">Reporte @Model.Reporte?.Folio</h4>
            </div>

            <div class="breadcrumb-action justify-content-center flex-wrap">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">
                                <i class="uil uil-estate"></i>Inicio
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href='@Url.Action("Index", "Reportes")'>
                                <i class="uil uil-table"></i>Reportes
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Reporte</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
}

<section class="mb-2">
    <div class="support-details">
        <div class="fluid-container">
            <div class="row g-2">
                <div class="col-12 p-2 border rounded bg-white d-flex gap-2 align-items-center justify-content-start">
                    <button id="button-save-changes" class="btn px-15 btn-success d-none">
                        <i class="las la-save"></i>
                        <span>Guardar Cambios</span>
                    </button>
                    <button id="button-discard-changes" class="btn px-15 btn-info d-none">
                        <i class="las la-undo-alt"></i>
                        <span>Cancelar Cambios</span>
                    </button>

                    <button id="button-delete" class="btn px-15 btn-danger ml-auto ms-auto">
                        <i class="las la-trash-alt"></i>
                        <span>Eliminar Reporte</span>
                    </button>
                </div>

                <div class="col-12">
                    @await Html.PartialAsync("./Partials/DatosReporte.cshtml", Model)
                </div>
            </div>
        </div>
    </div>
</section>

<div class="card card-default card-md mb-4">
    <div class="card-body">
        <div class="tab-wrapper">
            <div class="dm-tab tab-horizontal">
                <ul class="nav nav-tabs vertical-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="tab-v-1-tab" data-bs-toggle="tab" href="#tab-v-1" role="tab" aria-selected="true">
                            <i class="las la-comment-dots"></i>
                            Entradas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tab-v-2-tab" data-bs-toggle="tab" href="#tab-v-2" role="tab" aria-selected="false">
                            <i class="las la-paperclip"></i>
                            Archivos
                        </a>
                    </li>
                    @if(mostrarMapa)
                    {
                        <li class="nav-item">
                            <a class="nav-link" id="tab-v-3-tab" data-bs-toggle="tab" href="#tab-v-3" role="tab" aria-selected="false">
                                <i class="las la-map-marked-alt"></i>
                                Mapa
                            </a>
                        </li>
                    }
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-v-1" role="tabpanel" aria-labelledby="tab-v-1-tab" style="min-height: 25vh;">
                        @foreach(EntradaDTO detReporte in Model.Entradas)
                        {
                            var _nombreOperador = detReporte.Operador ?? "Desconocido";
                            <div class="entrada-wrap px-3">
                                <div class="flex-1">
                                    <div class="d-flex gap-2">
                                        <div class="report-type-icon text-center">
                                            @switch(detReporte.TipoMovimientoId)
                                            {
                                                case (int) TipoMovimientoEnum.Usuario:
                                                    <i class="las la-comment-medical bg-info text-white rounded-circle p-1" style="font-size:1.5rem;"></i>
                                                    break;

                                                case (int) TipoMovimientoEnum.CambioDeEstatus:
                                                    <i class="las la-check-circle bg-info text-white rounded-circle p-1" style="font-size:1.5rem;"></i>
                                                    break;
                                                
                                                case (int) TipoMovimientoEnum.Asignacion:
                                                    <i class="las la-clone bg-info text-white rounded-circle p-1" style="font-size:1.5rem;"></i>
                                                    break;
                                                
                                                case (int) TipoMovimientoEnum.Edicion:
                                                    <i class="las la-pen bg-info text-white rounded-circle p-1" style="font-size:1.5rem;"></i>
                                                    break;

                                                case (int) TipoMovimientoEnum.Eliminacion:
                                                    <i class="las la-trash-alt bg-info text-white rounded-circle p-1" style="font-size:1.5rem;"></i>
                                                    break;
                                                
                                                default:
                                                    <i class="las la-laptop-code bg-info text-white rounded-circle p-1" style="font-size:1.5rem;"></i>
                                                    break;
                                            }
                                        </div>
                                        <div class="body w-100">
                                            <div class="d-flex align-items-end gap-2">
                                                <h6 class="fs-14 mb-0">@_nombreOperador</h6>
                                                <span class="chat-text-box__time fs-12 color-light fw-400 ms-15">
                                                    @detReporte.Fecha
                                                </span>
                                            </div>
                                            <div class="d-flex align-items-center mb-2 mt-1 entrada-content">
                                                <p>
                                                    @Html.Raw(detReporte.Observaciones)
                                                </p>
                                            </div>
                                        </div>
                                        <div class="chat-text-box__other d-flex">
                                            <div class="dropdown dropdown-click">
                                                <button class="btn-link border-0 bg-transparent p-0" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <img src="~/img/svg/more-horizontal.svg" alt="more-horizontal" class="svg">
                                                </button>
                                                <div class="dropdown-default dropdown-bottomLeft dropdown-menu-left dropdown-menu" style="">
                                                    <a class="dropdown-item" href="#">Copiar</a>
                                                    <a class="dropdown-item" href="#">Comentar</a>
                                                    <a class="dropdown-item" href="#">Reenviar</a>
                                                    <a class="dropdown-item" href="#">Reportar</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="px-5">
                            <div id="nueva-entrada-wrap">
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="tab-v-2" role="tabpanel" aria-labelledby="tab-v-2-tab" style="min-height: 25vh;">
                        @await Html.PartialAsync("./Partials/DocumentosAdjuntosPanel.cshtml", Model.Archivos)
                    </div>

                    @if(mostrarMapa)
                    {
                        <div class="tab-pane fade" id="tab-v-3" role="tabpanel" aria-labelledby="tab-v-3-tab">
                            <div class="google-map" id="google-map" style="min-height: 75vh;"></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section modals
{
    <!-- Modal mostrar documento-->
    <div class="modal fade new-member documento-adjunto-modal" id="documento-adjunto-modal" role="dialog" tabindex="-1"
        aria-labelledby="staticBackdropLabel2" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false"
    >
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content radius-xl">
                <div class="modal-header">
                    <h4 class="modal-title fw-500" id="modaltitle2">Docuemnto Adjunto</h4>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <img src="~/img/svg/x.svg" alt="x" class="svg">
                    </button>
                </div>
                <div class="modal-body" id="body-modal2">
                    <iframe src="" title="eticket viewer" class="w-100" style="height: 75dvh;"></iframe>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
}

@section styles
{
    <style>
        .entrada-wrap
        {
            width: 100%;
            display: grid;
            grid-template-columns: 4px 1fr;
        }
        .entrada-wrap:not(:last-child):not(:nth-last-child(2))::before
        {
            content: "";
            display: block;
            width: 4px;
            height: 100%;
            background: #00aaff;
            border-radius: 1.5px;
            transform: translateX(30px) translateY(10px);
            z-index:0;
        }
        .entrada-wrap:nth-last-child(2)::before
        {
            content: "";
            display: block;
            width: 4px;
            height: 100%;
        }
        .entrada-content{
            background: #f2f2f2;
            border-radius: 16px 4px 4px 4px;
            transform: translateX(-24px);
            border: 1px solid #eaeaea;
            padding: 1rem 2rem;
        }

        .report-type-icon
        {
            transform:translateY(-.5rem);
            width: 4rem;
            z-index:20;
        }

        #nueva-entrada-wrap
        {
            margin-top: 2rem;
            transform: translateX(-1rem);
            width: 100%;
            padding: 0.5rem 1rem;
            background: #f2f2f2;
            border: 1px solid #eaeaea;
        }
        #nueva-entrada-wrap .trumbowyg-box
        {
            background: white;
        }
    </style>
}

@section scripts
{
    <script src="http://maps.googleapis.com/maps/api/js?key=@Html.Raw(googleMapsKey)&v=weekly&libraries=marker"></script>
    <script>
        var _lat = @Html.Raw(Model.Reporte?.GpsLat);
        var _lon = @Html.Raw(Model.Reporte?.GpsLon);
        var _currentEstatus = '@Html.Raw(Model.Reporte!.IdEstatus)';
        var _currentTipoReporte = '@Html.Raw(Model.Reporte.IdReporte)';
        var _currentOficina = '@Html.Raw(Model.Reporte.IdOficina)';
        var _urlFormularioDetEntrada = '@Url.Action("FormularioNuevoDetReporte")';
        var folioReporte = '@Html.Raw(Model.Reporte!.Folio)';
    </script>
    <script src="~/js/mostrar-reporte.min.js"></script>
}