
@model eticket.ViewModels.ReporteRequest

@{
    ViewData["Title"] = "Capturar Reporte";
}

<h2>Capturar Nuevo Reporte</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Nuevo" method="post">
    <div class="row">
        <div class="col-md-6">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Celular" class="form-label"></label>
            <input type="number" asp-for="Celular" class="form-control" />
            <span asp-validation-for="Celular" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Correo" class="form-label"></label>
            <input asp-for="Correo" class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Calle" class="form-label"></label>
            <input asp-for="Calle" class="form-control" />
            <span asp-validation-for="Calle" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="EntreCalles" class="form-label"></label>
            <input asp-for="EntreCalles" class="form-control" />
            <span asp-validation-for="EntreCalles" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Colonia" class="form-label"></label>
            <input asp-for="Colonia" class="form-control" />
            <span asp-validation-for="Colonia" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Localidad" class="form-label"></label>
            <input asp-for="Localidad" class="form-control" />
            <span asp-validation-for="Localidad" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Municipio" class="form-label"></label>
            <input asp-for="Municipio" class="form-control" />
            <span asp-validation-for="Municipio" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="GpsLat" class="form-label"></label>
            <input type="number" asp-for="GpsLat" class="form-control" />
            <span asp-validation-for="GpsLat" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="GpsLon" class="form-label"></label>
            <input type="number" asp-for="GpsLon" class="form-control" />
            <span asp-validation-for="GpsLon" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="IdEstatus" class="form-label"></label>
            <select asp-for="IdEstatus" asp-items="ViewBag.EstatusList" class="form-select">
                <option value="">-- Selecciona un estatus --</option>
            </select>
            <span asp-validation-for="IdEstatus" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Observaciones" class="form-label"></label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </div>
</form>


@section Scripts
{
    @if (TempData["SwalMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: '¡Éxito!',
                text: '@TempData["SwalMessage"]',
                confirmButtonText: 'Aceptar'
            });
        </script>
    }
}